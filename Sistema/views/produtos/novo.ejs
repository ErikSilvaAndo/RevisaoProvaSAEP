<%- include('../layouts/header.ejs', {titulo: 'Cadastro de Produto'}) %>
    <div>
        <h2>Cadastro de Produto</h2>
        <form action="/produtos/novo" method="post" class="cardFormulario">
            <div>
                <label class="label" for="nome">Nome:</label>
                <input type="text" name="nome" id="nome" class="input-padrao" placeholder="Ex: Chinelo" required>
            </div>
            <div>
                <label class="label">Quantidade:</label>
                <input type="number" name="quantidade" id="quantidade" class="input-padrao" placeholder="Ex: 5" required>
            </div>
            <div>
                <label class="label">Estoque min√≠mo:</label>
                <input type="number" name="estoque_minimo" id="estoque_minimo" class="input-padrao" placeholder="Ex: 1" required>
            </div>
            <button type="submit" class="botao">Cadastrar</button>
            <a href="/produtos/listar">Cancelar</a>
        </form>
    </div>
<%- include('../layouts/footer.ejs') %>